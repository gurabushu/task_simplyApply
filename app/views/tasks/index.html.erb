<h1>タスク一覧</h1>

<div class="task-item">
<% if @task.empty? %>
    <p>タスクがありません。</p>
<% else %>
    <p>タスクが<%= @task.count %>件あります。</p>
<% end %>

<% @task.each do |task| %>
    <p><%= task.title %></p>
    <p><%= task.description %></p>
    <p><%= task.status %></p>
    <p><%= task.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
    <% end %>
</div>

<%= link_to "新規タスク作成", new_task_path, class: "btn-element" %>


